<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Restaurant"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/deep_purple"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/restaurant_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Restaurant Name"
            android:background="@drawable/custom_edittext"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/restaurant_category_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category (e.g., Pizza, Burger)"
            android:background="@drawable/custom_edittext"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/restaurant_cuisine_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cuisine (e.g., Italian, Mexican)"
            android:background="@drawable/custom_edittext"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/restaurant_location_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location (e.g., New York, NY)"
            android:background="@drawable/custom_edittext"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/restaurant_budget_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Budget (e.g., 300)"
            android:inputType="number"
            android:background="@drawable/custom_edittext"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/restaurant_description_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:background="@drawable/custom_edittext"
            android:padding="12dp"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/restaurant_image_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Image URL"
            android:background="@drawable/custom_edittext"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/add_restaurant_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Restaurant"
            android:backgroundTint="@color/deep_purple"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>