<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/blue_purple_bg">

    <!-- Header with Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="16dp"
        android:layout_marginBottom="8dp">

        <ImageButton
            android:id="@+id/btnBackArrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Go back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Analytics Dashboard"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:paddingStart="16dp" />

        <!-- Spacer for balance -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp"
        android:paddingTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Summary Stats Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="16dp">

                <!-- Total Orders Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#E8F5E9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Orders"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/total_orders_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Total Revenue Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#E3F2FD">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Revenue"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/total_revenue_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹--"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#2196F3"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Orders Over Time Chart -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Daily Orders Trend"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/deep_purple"
                        android:layout_marginBottom="12dp"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/orders_line_chart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Revenue Over Time Chart -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’° Revenue Growth Analysis"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/deep_purple"
                        android:layout_marginBottom="12dp"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/revenue_line_chart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Order Status Distribution Chart -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¦ Order Status Distribution"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/deep_purple"
                        android:layout_marginBottom="12dp"/>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/order_status_pie_chart"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Revenue by Restaurant Chart -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸª Top Revenue Generating Restaurants"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/deep_purple"
                        android:layout_marginBottom="12dp"/>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/restaurant_revenue_bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Top-Selling Dishes Chart -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ½ï¸ Best Selling Menu Items"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/deep_purple"
                        android:layout_marginBottom="12dp"/>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/top_dishes_bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Category Popularity Chart -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ˆ Most Ordered Categories"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/deep_purple"
                        android:layout_marginBottom="12dp"/>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/category_pie_chart"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Orders by City Chart -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ™ï¸ Orders Distribution Across Cities"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/deep_purple"
                        android:layout_marginBottom="12dp"/>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/cities_bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Payment Methods Distribution Chart -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’³ Payment Method Preferences"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/deep_purple"
                        android:layout_marginBottom="12dp"/>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/payment_pie_chart"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- User Cuisine Preferences Chart -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¥ User Cuisine Preferences"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/deep_purple"
                        android:layout_marginBottom="12dp"/>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/user_prefs_pie_chart"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Restaurant Ratings Chart -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­ Restaurant Performance Ratings"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/deep_purple"
                        android:layout_marginBottom="12dp"/>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/review_ratings_bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>