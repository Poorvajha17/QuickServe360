<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Dish Image -->
        <ImageView
            android:id="@+id/imgDish"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/dish_image"
            android:background="@drawable/rounded_image" />

        <!-- Dish Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <!-- Dish Name -->
            <TextView
                android:id="@+id/txtDishName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dish Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/deep_purple" />

            <!-- Dish Description -->
            <TextView
                android:id="@+id/txtDishDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dish description goes here"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginTop="4dp" />

            <!-- Dish Price -->
            <TextView
                android:id="@+id/txtDishPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹0"
                android:textSize="14sp"
                android:textColor="@color/green"
                android:layout_marginTop="6dp" />

            <!-- Add to Cart Button -->
            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/deep_purple"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>