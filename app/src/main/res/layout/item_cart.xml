<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Dish Image -->
        <ImageView
            android:id="@+id/imgCartDish"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image" />

        <!-- Dish Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <!-- Dish Name -->
            <TextView
                android:id="@+id/txtCartDishName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dish Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/deep_purple" />

            <!-- Dish Price -->
            <TextView
                android:id="@+id/txtCartDishPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹0"
                android:textSize="14sp"
                android:textColor="@color/green"
                android:layout_marginTop="6dp" />

            <!-- Per-item Total -->
            <TextView
                android:id="@+id/txtCartItemTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: ₹0"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/deep_purple"
                android:layout_marginTop="4dp" />

            <!-- Quantity Controls -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Decrease Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDecreaseQty"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="-"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:padding="0dp"
                    app:cornerRadius="18dp"
                    app:backgroundTint="@color/deep_purple"/>

                <!-- Quantity Text -->
                <TextView
                    android:id="@+id/txtCartQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black" />

                <!-- Increase Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnIncreaseQty"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="+"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:padding="0dp"
                    app:cornerRadius="18dp"
                    app:backgroundTint="@color/deep_purple"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Remove Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRemoveFromCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:textSize="12sp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/red"
            android:layout_marginStart="8dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>